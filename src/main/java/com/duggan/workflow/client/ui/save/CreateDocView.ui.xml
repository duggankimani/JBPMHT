<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
	
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:dt='urn:import:com.google.gwt.user.datepicker.client'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	xmlns:v='urn:import:com.duggan.workflow.client.ui.component'
	xmlns:up='urn:import:com.duggan.workflow.client.ui.upload.custom'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:DialogBox text="Add Document" styleName="modal modal-document" modal="true" glassEnabled="true" ui:field="popupView">
	    <g:HTMLPanel>
	    <v:IssuesPanel ui:field="issues">
	    </v:IssuesPanel>
	    
	    <g:HTMLPanel ui:field="panelBody" styleName="modal-body">
	    	<fieldset>
			<g:HTMLPanel ui:field="panelFields" styleName="form-horizontal">
	    	
	        <div class ="control-group">
	            <div class="control-label" ui:field="tdDocType">Document Type</div>
	            <div class="controls">
	                <d:DropDownList ui:field="lstDocumentType" title="Type of document e.g Invoice, Contract etc - mandatory"></d:DropDownList>
	                <span class="mandatory" title="Required Field">*</span>
	            </div>
	        </div>
	        
	        <div class ="control-group">
	            <div class="control-label">Subject</div>
	            <div class="controls">
	                <g:TextBox ui:field="txtSubject" title="A unique title for the document e.g an invoice number"></g:TextBox>
	                <span class="mandatory" title="Required Field">*</span>
	            </div>
	       </div>
	             
	        <div class="control-group">
	            <div class="control-label">Document Date</div>
	            <div class="controls">
	                <dt:DateBox ui:field="dtDocDate" title="A date on the document (for dated documents) e.g invoice date"></dt:DateBox>
	            </div>
	        </div>
	        
	        <div class="control-group">
	            <div class="control-label">Business Partner</div>
	            <div class="controls">
	                <g:TextBox ui:field="txtPartner" title="Name of the external party/company to whom this document relates e.g Supplier Name on an invoice"></g:TextBox>
	            </div>
	        </div>
	        
	        <div class="control-group">
	            <div class="control-label">Document Value</div>
	            <div class="controls">
	                <g:TextBox ui:field="txtValue" title="Total amount/value of this document - e.g Invoice value "></g:TextBox>
	            </div>
	        </div>
	        
	        <div class="control-group">
	            <div class="control-label">Description:</div>
	            <div class="controls">
	                <g:TextArea ui:field="txtDescription" title="General description of this document"></g:TextArea>
	                <span class="mandatory" title="Required Field">*</span>
	            </div>
	        </div>
	        	 
	        <div class="control-group">
	            <div class="control-label">File:</div>
	            <div class="controls">	             
	                <g:HTMLPanel ui:field="uploadPanel">
	                    <up:Uploader ui:field="uploader"></up:Uploader>	                    
	                </g:HTMLPanel>	        		
	            </div>
	        </div>
	       	
	       	<div class="control-group">
				 <div class="control-label">Priority</div>
	             <div class="controls">
		              <g:CheckBox ui:field="chkNormal" text="Normal"/>
		              <g:CheckBox ui:field="chkHigh" text="High"/>
		              <g:CheckBox ui:field="chkCritical" text="Urgent"/>
	             </div>  
             </div>
			</g:HTMLPanel>	
			</fieldset>
	    </g:HTMLPanel>
	            
	      <g:HTMLPanel ui:field="panelButtons" styleName="form-actions">
			 <g:Button ui:field="btnCancel" styleName ="btn btn-default pull-left">Cancel</g:Button>
		     <g:Button ui:field="btnSave" styleName ="btn btn-success pull-right">Save As Draft</g:Button>
		    <g:Button ui:field="btnApproval" styleName="btn btn-primary pull-right forward">Forward For Approval</g:Button>
		</g:HTMLPanel>
		
	  </g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>
