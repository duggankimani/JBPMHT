<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<div class="content-body">
			<div class="row">
				<div class="action-buttons">
					<g:Anchor ui:field="aNew" styleName="btn btn-primary"
						title="New Email">
						<i class="glyphicon glyphicon-plus"></i>
						New Email
					</g:Anchor>
					<g:Anchor ui:field="aView" styleName="btn btn-primary hide"
						title="View Email">
						<i class="glyphicon glyphicon-upload-alt"></i>
						View Email
					</g:Anchor>
					<g:Anchor ui:field="aViewError" styleName="btn btn-primary hide"
						title="View Error">
						<i class="glyphicon glyphicon-arrow-down"></i>
						View Error
					</g:Anchor>
				</div>
				
				<div class="panel widget">
					<d:Grid ui:field="grid"></d:Grid>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
