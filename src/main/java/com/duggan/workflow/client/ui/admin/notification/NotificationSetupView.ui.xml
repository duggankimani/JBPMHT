<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component' ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel ui:field="panelContainer" styleName="hide">
		<!-- g:CheckBox ui:field="chkNotification">Enable Email Notification</g:CheckBox -->
		<!-- g:CheckBox ui:field="chkDefault">Use Default Notification</g:CheckBox -->
		<span ui:field="notificationHeader" style="font-size:14px; font=weight:bold;">Email Notification</span>
		<table>
		  <tr>
		     <td><g:CheckBox ui:field="chkNotification"></g:CheckBox></td>
		     <td><span ui:field="spnNotification">Enable Email Notification</span></td>
		     <td title="Generate notification on this action">On Action</td>
		     <td>
			     <d:DropDownList ui:field="listActions" styleName="input-medium">
			     </d:DropDownList>
		     </td>
		  </tr>
		  <tr>
		     <td><g:CheckBox ui:field="chkDefault"/></td>
		     <td>Use Default Notification</td>
		     <td></td>
		     <td></td>
		  </tr>
		</table>
		
		<g:HTMLPanel styleName="control-group hidden">
	       <label ui:field="lblEl" class="control-label">To</label>
		   <g:HTMLPanel styleName="controls" ui:field="panelControls">
		   	  <d:AutoCompleteField ui:field="autocompleteTargets"></d:AutoCompleteField>
	       </g:HTMLPanel>
       </g:HTMLPanel>
       
		<g:HTMLPanel>
			<d:TextArea ui:field="txtSubject" type="text"
			 placeholder="Subject" class="input-xlarge" rows="1" width="100%"/>
			<d:TextArea ui:field="txtNotification" 
			rows="3" width="100%" placeholder="Custom Notification"> 
			</d:TextArea>
		</g:HTMLPanel>
		
		<g:HTMLPanel styleName="control-group">
			  <div class="controls">
			  	<d:ActionLink styleName="btn btn-success" ui:field="aHtmlEditor" title="Click to Use the HTML Editor">Editor</d:ActionLink>
			  	<d:ActionLink styleName="btn btn-success" ui:field="aSave">Save</d:ActionLink>
			  </div>
	       </g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder>
