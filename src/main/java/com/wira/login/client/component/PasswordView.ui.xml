<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.wira.login.client.component">

	<ui:style>
		.text-center {
		text-align: center;
		}
	</ui:style>
	<g:HTMLPanel styleName="" ui:field="panelContainer">
		<div class="row">
			<d:MsgPanel ui:field="issues"></d:MsgPanel>
		</div>

		<div ui:field="divInstructions">
			<div class="row">
				<div ui:field="divInstructionItems" class="">
					<div class="">
						<div class="text-text-muted">
							<i class="fa fa-info-circle"></i>
							<span ui:field="spnInfo">
								Key in your email address and click the button below.
							</span>
						</div>
					</div>

					<br />

					<div>
						<div class="">
							<g:TextBox styleName="input-xlarge" ui:field="txtEmail"></g:TextBox>
						</div>
					</div>

					<div ui:field="divPassword">
						<div class="">
							<g:PasswordTextBox styleName="input-xlarge"
								ui:field="txtPassword"></g:PasswordTextBox>
						</div>
					</div>

					<div ui:field="divConfirmPassword">
						<div class="">
							<g:PasswordTextBox styleName="input-xlarge"
								ui:field="txtConfirmPassword"></g:PasswordTextBox>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div ui:field="divActionButtons" class="">
					<g:Anchor ui:field="aSave"
						styleName="btn btn-success btn-gold btn-lg left-align btn-fill">Set Password</g:Anchor>

					<g:Anchor ui:field="aProceedToLogin" styleName="right-align">Proceed
						to
						Login</g:Anchor>

					<g:Anchor ui:field="aResendAct"
						styleName="btn btn-success btn-gold btn-lg left-align btn-fill">Send Reset Email</g:Anchor>

					<g:Anchor ui:field="aSendActivation"
						styleName="btn btn-success btn-gold btn-lg left-align btn-fill">Send Reset Email</g:Anchor>

					<g:Anchor ui:field="aCancel" styleName="right-align" href="login.html">Cancel</g:Anchor>
				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 