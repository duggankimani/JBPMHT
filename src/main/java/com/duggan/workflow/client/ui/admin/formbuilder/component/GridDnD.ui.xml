<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	>
	<g:HTMLPanel styleName="col-md-12">
		<div class="col-md-10">	
			<g:HorizontalPanel ui:field="hPanel" horizontalAlignment="center">
			</g:HorizontalPanel>			
		</div>
		
		<div class="col-md-2">
			<g:HTMLPanel ui:field="btnGroup">
				<div>
					<button type="button" class="btn btn-default dropdown-toggle"
						data-toggle="dropdown">
						<i class="glyphicon glyphicon-plus"></i>
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<li>
							<d:ActionLink ui:field="atxtField">
								<i class="glyphicon glyphicon-edit"></i>
								TextField
							</d:ActionLink>
						</li>
						
						<li>
							<d:ActionLink ui:field="aNumField">
								<i class="glyphicon glyphicon-edit"></i>
								Number Field
							</d:ActionLink>
						</li>
						
						<li>
							<d:ActionLink ui:field="aCurrField">
								<i class="glyphicon glyphicon-edit"></i>
								Currency Field
							</d:ActionLink>
						</li>
						
						<li>
							<d:ActionLink ui:field="aRadioField">
								<i class="glyphicon glyphicon-edit"></i>
								Radio
							</d:ActionLink>
						</li>
						
						<li>
							<d:ActionLink ui:field="alblField">
								<i class="glyphicon glyphicon-edit"></i>
								Label
							</d:ActionLink>
						</li>
						
						<li>
							<d:ActionLink ui:field="adateBox">
								<i class="glyphicon glyphicon-edit"></i>
								Date Box
							</d:ActionLink>
						</li>
						
						<li>
							<d:ActionLink ui:field="achckBox">
								<i class="glyphicon glyphicon-edit"></i>
								CheckBox
							</d:ActionLink>
						</li>
						
						<li>
							<d:ActionLink ui:field="slctField">
								<i class="glyphicon glyphicon-edit"></i>
								Select Field
							</d:ActionLink>
						</li>
					</ul>
				
				</div>
		  </g:HTMLPanel>
	  </div>
	</g:HTMLPanel>
</ui:UiBinder>