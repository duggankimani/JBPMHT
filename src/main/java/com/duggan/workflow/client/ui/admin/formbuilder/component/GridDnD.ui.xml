<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.duggan.workflow.client.ui.component'>
	<g:HTMLPanel styleName="row-fluid">
		<div style="width:100px; min-width:100px">
		    <div class="span4">
		    	<g:Anchor ui:field="gridConfig" title="Sort columns">
		    	    <i class="icon-sort-by-order"></i>
		    	</g:Anchor>
		    </div>
		    
			<div class="span4">
				<a data-toggle="dropdown" title="Add Column">
					<i class="icon-plus"></i>
					<span class="caret"></span>
				</a>
				<ul class="dropdown-menu" role="menu">
					<li>
						<d:ActionLink ui:field="atxtField">
							<i class="icon-edit"></i>
							TextField
						</d:ActionLink>
					</li>

					<li>
						<d:ActionLink ui:field="aNumField">
							<i class="icon-edit"></i>
							Number Field
						</d:ActionLink>
					</li>

					<li>
						<d:ActionLink ui:field="aCurrField">
							<i class="icon-edit"></i>
							Currency Field
						</d:ActionLink>
					</li>

					<li>
						<d:ActionLink ui:field="aRadioField">
							<i class="icon-edit"></i>
							Radio
						</d:ActionLink>
					</li>

					<li>
						<d:ActionLink ui:field="alblField">
							<i class="icon-edit"></i>
							Label
						</d:ActionLink>
					</li>

					<li>
						<d:ActionLink ui:field="adateBox">
							<i class="icon-edit"></i>
							Date Box
						</d:ActionLink>
					</li>

					<li>
						<d:ActionLink ui:field="achckBox">
							<i class="icon-edit"></i>
							CheckBox
						</d:ActionLink>
					</li>

					<li>
						<d:ActionLink ui:field="slctField">
							<i class="icon-edit"></i>
							Select Field
						</d:ActionLink>
					</li>
				</ul>
			</div>

			<g:HTMLPanel ui:field="pMove" styleName="span4">
			</g:HTMLPanel>

			<div>
				<g:HorizontalPanel ui:field="hPanel"
					horizontalAlignment="center">
				</g:HorizontalPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>