<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateLocales='default'>

<ui:style>

</ui:style>

	<g:HTMLPanel styleName="full-page" ui:field="container">
		<!--Document View -->
		<div ui:field="divDocView" class="span12 hide" style="height:100%">
			<g:HTMLPanel ui:field="docContainer" styleName="full-page">
			</g:HTMLPanel>
		</div>

		<div ui:field="divTaskListing" class="row-fluid full-page">
			<div style="height: 40px;">
				<div class="span12">
					<h4 style="display: inline-block;padding: 10px;">
						<a ui:field="aProcess" href="#/activities" style="color: #0088cc;">
							<i class="icon-arrow-left" style="padding-right: 3px;"></i>
						</a>
						<span ui:field="processName"></span>
					</h4>
					<div class="pull-right" style="line-height: 35px;">
						<div ui:field="divNoData" style="display:inline-block">Loading....</div>

						<div class="dropdown" style="display:inline-block">
							<button class="btn dropdown-toggle" data-toggle="dropdown">
								<span class="caret"></span>
							</button>

							<ul class="dropdown-menu" role="menu" style="right: 0px;left: initial;">
								<li>
									<d:ActionLink ui:field="aFilter" title="Filter Data">
										<i class="icon-filter"></i>
										Filter
									</d:ActionLink>
								</li>
								<li>
									<d:ActionLink ui:field="aConfigure"
										title="Select the columns to show">
										<i class="icon-cogs"></i>
										Configure
									</d:ActionLink>

								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>

			<div class="span12 row-fluid"
				style="overflow: auto; height: calc(100% - 80px); position: absolute; zoom: 1;margin-left: 0px;">
				<g:ScrollPanel ui:field="divTableListing" styleName="span12">
					<g:FlexTable ui:field="tblTasks"
						styleName="table table-hover table-condensed" width="100%"></g:FlexTable>
				</g:ScrollPanel>

				<div class="span12" style="margin:0px">
					<div class="pagination center">
						<ul id="liPaginator">
							<li class="active">
								<a><span ui:field="spnCount"></span></a>
							</li>

							<li>
								<a title="Click to jump to pageâ€¦" onclick="jumpto(); return false;"
									href="#">
									Page
									<strong id="page"></strong>
									of
									<strong id="totalPages"></strong>
								</a>
							</li>
							<li>
								<a id="btn_prev"><i class="icon icon-double-angle-left"></i></a>
							</li>

							<li>
								<a id="btn_next"><i class="icon icon-double-angle-right"></i></a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>


	</g:HTMLPanel>
</ui:UiBinder>
