<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.duggan.workflow.client.ui.component">
	<g:HTMLPanel styleName="form-group" ui:field="panelGroup">
		<label ui:field="lblEl" class="control-label">Text Area:</label>
		<div class="controls" ui:field="divControls">
			<!-- textarea id="textarea" name="textarea">Some default text</textarea -->
			<g:HTMLPanel styleName="comment-container" ui:field="panelControls">
				<d:TextArea ui:field="txtComponent" type="text" class="input-xlarge"></d:TextArea>
				<g:InlineLabel ui:field="lblComponent" styleName="help-inline"></g:InlineLabel>
				<span ui:field="spnMsg" class="hide help-inline helper-font-14">
					<i class="icon" ui:field="spnIcon"></i>
				</span>
			</g:HTMLPanel>
			<span ui:field="spnMandatory" style="color:red">*</span>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 