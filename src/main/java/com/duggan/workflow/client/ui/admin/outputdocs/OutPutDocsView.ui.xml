<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<div class="content-body overflow-y">
			<div class="row">
				<div class="action-buttons" ui:field="divGeneralActions">
					<g:Anchor ui:field="aNewDocument" styleName="btn btn-primary"
						title="Add a New Process">
						<i class="glyphicon glyphicon-plus"></i>
						Add Document
					</g:Anchor>
				</div>

				<div class="action-buttons hide" ui:field="divModelActions">
					<g:Anchor ui:field="aEdit" styleName="btn btn-primary"
						title="Edit Properties">
						<i class="glyphicon glyphicon-pencil"></i>
						Document Properties
					</g:Anchor>
					<g:Anchor ui:field="aEditDoc" styleName="btn btn-success"
						title="Edit Document">
						<i class="glyphicon glyphicon-pencil"></i>
						Edit Document
					</g:Anchor>

					<g:Anchor ui:field="aDelete" styleName="btn btn-danger"
						title="Delete User">
						<i class="glyphicon glyphicon-trash"></i>
						Delete Document
					</g:Anchor>
				</div>
			</div>

			<g:FlexTable ui:field="tblView" styleName="table table-highlight">
			</g:FlexTable>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
