<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:d="urn:import:com.wira.login.client.component">

	<ui:style>
		.text-center {
		text-align: center;
		}
	</ui:style>
	<g:HTMLPanel styleName="panel panel-default" ui:field="panelContainer">
		<div class="row">
			<div class="col s12">
				<d:MsgPanel ui:field="issues"></d:MsgPanel>
			</div>
		</div>

		<div ui:field="divInstructions">
			<div class="row">
				<div ui:field="divInstructionItems" class="col s12">
					<div class="col s12">
						<div class="text-muted">
							<i class="fa fa-info-circle"></i>
							<span ui:field="spnInfo">
								You have requested to change your password. 
								Please enter a new password below.
							</span>
						</div>
					</div>

					<br />

					<div class="form-group">
						<div class="col s12">
							<g:TextBox styleName="input-field" ui:field="txtEmail"></g:TextBox>
						</div>
					</div>

					<div ui:field="divPassword">
						<div class="col s12">
							<g:PasswordTextBox styleName="input-field"
								ui:field="txtPassword"></g:PasswordTextBox>
						</div>
					</div>

					<div ui:field="divConfirmPassword">
						<div class="col s12">
							<g:PasswordTextBox styleName="input-field"
								ui:field="txtConfirmPassword"></g:PasswordTextBox>
						</div>
					</div>
				</div>

			</div>

			<div class="row">
				<div ui:field="divActionButtons" class="col s12">
					<g:Anchor ui:field="aSave"
						styleName="btn btn-fill btn-gold btn-lg left-align btn-fill">Set Password</g:Anchor>

					<g:Anchor ui:field="aProceedToLogin" styleName="right-align">Proceed
						to Login</g:Anchor>

					<g:Anchor ui:field="aResendAct"
						styleName="btn btn-fill btn-gold btn-lg left-align btn-fill">Send Reset Email</g:Anchor>

					<g:Anchor ui:field="aSendActivation"
						styleName="btn btn-fill btn-gold btn-lg left-align btn-fill">Send Reset Email</g:Anchor>

					<g:Anchor ui:field="aCancel" styleName="right-align"
						href="#login">Cancel</g:Anchor>
				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 