<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
    >
	<g:AbsolutePanel ui:field="container">
	        <g:HTMLPanel styleName="control-group">
		       <label ui:field="lblEl" for="Username" class="control-label">Number Input:</label>
			    <g:HTMLPanel styleName="controls" ui:field="panelControls">
				    <d:DoubleField ui:field="txtComponent" type="text" styleName="input-xlarge"/>
				    <g:InlineLabel ui:field="lblReadOnly"></g:InlineLabel>
				    <span ui:field="spnMandatory" style="color:red">*</span>
		    	</g:HTMLPanel>
	       </g:HTMLPanel>
	</g:AbsolutePanel>
</ui:UiBinder>	