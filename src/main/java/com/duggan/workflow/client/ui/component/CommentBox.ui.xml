<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		    <div class="col-md-2 image">
		        	<g:Image ui:field="img" width="45px"/>
					<!-- img src="img/blueman.png" width="45px"/ -->
			</div>
				
			<span ui:field="spnArrow" class="arrow"></span>
				
		   <div class="col-md-10 textbox">
			   <g:FocusPanel ui:field="commentPanel">
					<g:HTMLPanel styleName="comment-container comment-small" ui:field="commentContainer">
						<g:TextArea ui:field="commentBox" styleName="textarea-box textarea-small"></g:TextArea>
						<d:ActionLink ui:field="aSaveComment" styleName="hand btn btn-primary pull-right button-post hidden">POST</d:ActionLink>
					</g:HTMLPanel>
				</g:FocusPanel>
			</div>
	</g:HTMLPanel>
</ui:UiBinder> 