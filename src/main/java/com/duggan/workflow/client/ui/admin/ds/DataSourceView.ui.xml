<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
				<div class="content-body">
					<div class="row-fluid">
						<div class="action-buttons">
							<g:Anchor ui:field="aNewProcess" styleName="btn btn-primary"
								title="Add a New Process">
								<i class="icon-plus"></i>
								Add Data source
							</g:Anchor>
							<g:Anchor ui:field="aStartProcesses" styleName="btn btn-success"
								title="Start All Processes">
								<i class="icon-ok"></i>
								Test All Data sources
							</g:Anchor>
					   </div>																			
					</div>
					
					<div class="table table-striped table-hover">
					    <div class="thead">
					    	<div class="tr">
								<div class="th">
								  <label><input type="checkbox" class="ace"/></label>
								</div>
								<div class="th">RDBMS</div>
								<div class="th">Config Name</div>
								<div class="th">JNDI Name</div>
								<div class="th">Driver</div>
								<div class="th">URL</div>
								<div class="th">User</div>
								<div class="th">STATUS</div>
								<div class="th">LAST MODIFIED</div>
								<div class="th">ACTIONS</div>	
							</div>								

						</div>
						<g:HTMLPanel ui:field="tblRow" styleName="tbody">
						</g:HTMLPanel>
					</div>
				</div>
		</g:HTMLPanel>
</ui:UiBinder>
