<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:steps='urn:import:com.duggan.workflow.client.ui.admin.processitem'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="tr tr-step" ui:field="divTasks">
		<g:HTMLPanel styleName="center td">
			<label>				
			</label>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="multicolumn">
			<g:HTMLPanel>
				<div class="form-group">
					<label for="ProcessName">Tasks:</label>
					<d:DropDownList ui:field="tasksDropDown" styleName="form-control"/>
					<d:ActionLink ui:field="aAddItem" styleName="btn btn-primary">Add</d:ActionLink>
				</div>
				
				<div class="form-group">
					<!-- label for="ProcessName">Selected:</label -->
					<d:TableView ui:field="tblView" striped="false" isGrid="false"
						bordered="true" autoNumber="false" styleName="table-programs">
					</d:TableView>
				</div>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
