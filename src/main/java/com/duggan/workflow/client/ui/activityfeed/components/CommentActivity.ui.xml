<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.duggan.workflow.client.ui.component">
	<d:BulletPanel styleName="arrow-box-left gray">
		<g:HTMLPanel>
			<div class="avatar">
				<g:Image styleName="avatar-small" ui:field="img"/>
			</div>
			<div class="info">
				<span class="name">
					<span class="label label-green">COMMENT</span>
					<strong class="indent" ui:field="spnUser">Alex</strong>
					<span ui:field="spnAction">posted a comment on this task:</span>
					<strong>
						<!-- span ui:field="spnSubject">Core Admin</span-->
						<g:Anchor ui:field="aDocument" styleName="item unread hand">
        				</g:Anchor> 
					</strong>
				</span>
				<span class="time">
					<i class="icon-time"></i>
					<span ui:field="spnTime">6 minutes ago</span>
				</span>
			</div>
			<div class="content">
				<blockquote>
					<span ui:field="commentText"> comment Text </span>
				</blockquote>
				<!-- <div> <a href="#"> <i class="icon-paper-clip"></i> <b>project_news.docx</b> 
					</a> </div> -->
			</div>
		</g:HTMLPanel>
	</d:BulletPanel>
</ui:UiBinder> 