<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.duggan.workflow.client.ui.component">
	<ui:style>
	</ui:style>
	<g:HTMLPanel styleName="">
		<div class="form-inline" ui:field="designHeader">
			<div class="lead span10" style="display:inline-block;">
				<label ui:field="lblTitle" class="lead" for="username1">HTML Form</label>
			</div>
			<div ui:field="divActions" class="pull-right hide" style="display:inline-block;">
				<g:Anchor styleName="btn btn-inverse hide" ui:field="aView" title="View Form">
				    <i class="icon-chevron-left"></i>
				    <i class="icon-chevron-right"></i>
				</g:Anchor>
				<g:Anchor styleName="btn" ui:field="aEdit" title="Edit HTML">
				    <i class="icon-chevron-left"></i>
				    <i class="icon-chevron-right"></i>
				 </g:Anchor>
				 <g:Anchor styleName="btn" ui:field="aSave" title="Save HTML">
				    Save<i class="icon-floppy-save"></i>
				 </g:Anchor>
			</div>
		</div>
		
		<g:HTMLPanel ui:field="htmlContent" styleName="form-horizontal hide">
			Content goes here
		</g:HTMLPanel>
		<g:HTMLPanel>
			<d:TextArea ui:field="txtComponent" rows="10" styleName="span12 hide">
			    HTML Goes here
			</d:TextArea>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>