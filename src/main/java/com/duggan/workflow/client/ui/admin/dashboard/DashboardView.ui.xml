<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'
	xmlns:c="urn:import:com.sencha.gxt.chart.client.chart"
	xmlns:d="urn:import:com.duggan.workflow.client.ui.component"
	>

	<g:HTMLPanel styleName="content-body overflow-y">

		<div class="row top-section section">
			<div class="col-md-4">
				<a class="dashboard-stat tertiary">
					<div class="visual">
						<i class="glyphicon glyphicon-book"></i>
					</div> <!-- /.visual -->

					<div class="details">
						<span class="content-block">Requests Total</span>
						<span class="value" ui:field="spnReqCount"></span>
					</div> <!-- /.details -->

					<i class="glyphicon glyphicon-play-circle more"></i>

				</a> <!-- /.dashboard-stat -->

			</div> <!-- /.col-md-3 -->

			<div class="col-md-4">
				<a class="dashboard-stat secondary">
					<div class="visual">
						<i class="glyphicon glyphicon-ok"></i>
					</div> <!-- /.visual -->

					<div class="details">
						<span class="content-block">Active Requests</span>
						<span class="value" ui:field="spnActiveCount"></span>
					</div> <!-- /.details -->

					<i class="glyphicon glyphicon-play-circle more"></i>

				</a> <!-- /.dashboard-stat -->

			</div> <!-- /.col-md-3 -->

			<div class="col-md-4">
				<a class="dashboard-stat primary">
					<div class="visual">
						<i class="glyphicon glyphicon-remove-circle"></i>
					</div> <!-- /.visual -->

					<div class="details">
						<span class="content-block">Failed Requests</span>
						<span class="value" ui:field="spnFailureCount"></span>
					</div> <!-- /.details -->

					<i class="glyphicon glyphicon-play-circle more"></i>

				</a> <!-- /.dashboard-stat -->

			</div> <!-- /.col-md-3 -->
		</div>

		<div class="row middle-section section">
			<div class="col-md-6">
				<div class="portlet">
					<div class="portlet-header">
						<h3>
							<i class="glyphicon glyphicon-bar-chart"></i>
							REQUESTS AGING ANALYSIS
						</h3>
					</div>
					<g:HTMLPanel styleName="portlet-content" ui:field="panelTurnAroundTime">
					</g:HTMLPanel>
				</div>
			</div>

			<div class="col-md-6">
				<div class="portlet">
					<div class="portlet-header">
						<h3>
							<i class="glyphicon glyphicon-bar-chart"></i>
							TOTAL REQUESTS MADE PER PROCESS
						</h3>
					</div>
					<g:HTMLPanel styleName="portlet-content" ui:field="panelTotalRequestsPerDoc">
					</g:HTMLPanel>
				</div>
			</div>
		</div>

		<div class="row middle-section section">
			<div class="portlet">
				<div class="portlet-header">
					<h3>
						<i class="glyphicon glyphicon-bar-chart"></i>
						LONGEST WAIT POINTS
					</h3>
				</div>
				<g:HTMLPanel styleName="portlet-content" ui:field="panelLongLastingProcesses">
				</g:HTMLPanel>
			</div>
		</div>

		<div class="row middle-section section">
			<div class="portlet">
				<div class="portlet-header">
					<h3>
						<i class="glyphicon glyphicon-bar-chart"></i>
						REQUESTS VS COMPLETION RATE
					</h3>
				</div>
				<g:HTMLPanel styleName="portlet-content" ui:field="panelRequestsApprovalsComp">
				</g:HTMLPanel>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>
