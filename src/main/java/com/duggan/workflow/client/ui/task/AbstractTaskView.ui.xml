<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	xmlns:d='urn:import:com.duggan.workflow.client.ui.component'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="full-page" ui:field="container">
		<!--middle navigation -->
		<div class="col-md-2 hide" ui:field="divTasks">
			<div id="nav-top" style="height:auto;">
				<i class="glyphicon glyphicon-tag"></i>
				<h5 ui:field="hCategory">Completed</h5>
				<br />

				<!-- div class="search hide" -->
				<div class="hide">
					<g:TextBox styleName="search-box" ui:field="txtSearch" />
					<g:Anchor styleName="glyphicon glyphicon-caret-down" ui:field="iFilterdropdown"></g:Anchor>
				</div>
				<g:Anchor ui:field="aRefresh" styleName="hide glyphicon glyphicon-refresh icon-large hand"></g:Anchor>
				<g:HTMLPanel ui:field="filterDialog" styleName="hidden"></g:HTMLPanel>
			</div>

			<g:ScrollPanel ui:field="divDocListing">
				<g:HTMLPanel styleName="content-nav row">
					<d:BulletListPanel ui:field="ulTaskGroups">
					</d:BulletListPanel>
					<g:InlineLabel ui:field="spnNoItems"></g:InlineLabel>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</div>

		<!--Detailed Info Description -->
		<div ui:field="divDocView" class="col-md-12 hide">
			<g:HTMLPanel ui:field="docContainer" styleName="full-page">
			</g:HTMLPanel>
		</div>

		<g:ScrollPanel ui:field="divTableListing" styleName="col-md-12 overflow-y">
			<!-- div class="no-overflow-y" style="margin-left:0px;" -->
			<g:FlexTable ui:field="tblTasks" styleName="table table-hover"
				width="100%"></g:FlexTable>
			<!-- /div -->
		</g:ScrollPanel>

	</g:HTMLPanel>
</ui:UiBinder>
