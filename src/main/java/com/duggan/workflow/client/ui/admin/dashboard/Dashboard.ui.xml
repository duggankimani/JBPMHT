<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel styleName="span12">
		<div class="container-fluid dashboard">
			<div class="row-fluid">
				<div class="span12">
					<div class="page-title-box">
						<legend><a href="#/dashboards">Dashboard</a></legend>
						<h4 class="page-title hide">Dashboard</h4>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
			<!-- end row-fluid -->

			<div class="row-fluid">

				<div class="span3" style="position:relative">
					<div class="card-box widget-box-two widget-two-primary">
						<i class="icon-bar-chart widget-two-icon"></i>
						<div class="wigdet-two-content">
							<p
								class="m-0 text-uppercase text-white font-600 font-secondary text-overflow"
								title="Statistics">Total Requests</p>
							<h2 class="text-white">
								<span data-plugin="counterup" ui:field="spnTotal">3000</span>
								<small>
									<i class="icon-arrow-up text-white"></i>
								</small>
							</h2>
							<p class="text-white m-0">
								<b></b>
								Total raised cases
							</p>
						</div>
					</div>
				</div>
				<!-- end col -->

				<div class="span3" style="position:relative">
					<div class="card-box widget-box-two widget-two-success">
						<i class="icon-ok widget-two-icon"></i>
						<div class="wigdet-two-content">
							<p
								class="m-0 text-white text-uppercase font-600 font-secondary text-overflow"
								title="User Today">Completed</p>
							<h2 class="text-white">
								<span data-plugin="counterup" ui:field="spnCompleted">2741</span>
								<small>
									<i class="icon-arrow-up text-white"></i>
								</small>
							</h2>
							<p class="text-white m-0">
								<b ui:field="spnCompletedPerc">75%</b>
								of total cases
							</p>
						</div>
					</div>
				</div>
				<!-- end col -->

				<div class="span3" style="position:relative">
					<div class="card-box widget-box-two widget-two-info">
						<i class="icon-inbox widget-two-icon"></i>
						<div class="wigdet-two-content">
							<p
								class="m-0 text-uppercase text-white font-600 font-secondary text-overflow"
								title="Request Per Minute">In Progress</p>
							<h2 class="text-white">
								<span data-plugin="counterup" ui:field="spnInProgress">1000</span>
								<small>
									<i class="icon-arrow-up text-white"></i>
								</small>
							</h2>
							<p class="text-white m-0">
								<b ui:field="spnInProgressPerc">30%</b>
								of total cases
							</p>
						</div>
					</div>
				</div>
				<!-- end col -->

				<div class="span3" style="position:relative">
					<div class="card-box widget-box-two widget-two-warning">
						<i class="icon-exclamation widget-two-icon"></i>
						<div class="wigdet-two-content">
							<p
								class="m-0 text-white text-uppercase font-600 font-secondary text-overflow"
								title="New Downloads">Overdue</p>
							<h2 class="text-white">
								<span data-plugin="counterup" ui:field="spnOverdue">854</span>
								<small>
									<i class="icon-arrow-up text-white"></i>
								</small>
							</h2>
							<p class="text-white m-0">
								<b ui:field="spnOverduePerc">10%</b>
								of total cases
							</p>
						</div>
					</div>
				</div>
				<!-- end col -->

			</div>
			<!-- end row-fluid -->









			<div class="row-fluid">

				<div class="span7">
					<div class="card-box">
						<h4 class="header-title m-t-0 m-b-30">Processes</h4>
						<div>
							<table class="table table-striped table-hover">
								<thead>
									<tr>
										<th>Process</th>
										<th style="width:20%">Total</th>
										<th style="width:20%">In Progress</th>
										<th style="width:20%">Overdue</th>
										<th style="width:20%" title="Average Turn Around Time">Avg. TOT</th>
									</tr>
								</thead>
								<tbody ui:field="processesTable">
								</tbody>
							</table>
						</div>
					</div>

					<div class="card-box">
						<h4 class="header-title m-t-0 m-b-30">Top Employeee Workloads</h4>
						<div>
							<table class="table table-striped table-hover">
								<thead>
									<tr>
										<th>Staff Name</th>
										<th style="width:20%">Total</th>
										<th style="width:20%">In Progress</th>
										<th style="width:20%">Overdue</th>
									</tr>
								</thead>
								<tbody ui:field="employeesTable">
								</tbody>
							</table>
						</div>
					</div>
				</div>

				<div class="span5">
					<div class="card-box">
						<h4 class="header-title">Processes Workload</h4>
						<div class="">
							<g:HTMLPanel ui:field="pieChart"
								styleName="ct-chart ct-golden-section dash-chart">
							</g:HTMLPanel>
						</div>
					</div>
					<div class="card-box">
						<h4 class="header-title">Overdue Tasks</h4>
						<div class="">
							<g:HTMLPanel ui:field="gaugeChart"
								styleName="ct-chart ct-golden-section dash-chart">
							</g:HTMLPanel>
						</div>
					</div>
				</div>
			</div>
			<!-- end row-fluid -->

		</div>
	</g:HTMLPanel>
</ui:UiBinder>